<%- include("includes/header", {title:"Task Details",
stylesheet:"/css/show.css"}) %>
<body>
  <form method="post" action="/home/<%= task.id %>?_method=PATCH">
    <div class="tasks">
      <a href="javascript:history.back()" class="back-btn">
        <i class="fa-solid fa-arrow-left"></i> Back
      </a>

      <div class="task" id="<%= task.id %>">
        <div class="checkbox-container">
          <input
            type="checkbox"
            id="check<%= task.id %>"
            name="check"
            class="checkbox"
          />
          <textarea name="task" class="task-text" enterkeyhint="done">
<%= task.task %></textarea
          >
        </div>
        <i class="far fa-star"></i>
      </div>
      <button type="submit" class="saveChanges">Save Changes?</button>
    </div>
  </form>

  <script src="/js/show.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
