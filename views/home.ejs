<%- include("includes/header", {title:"Todo List", stylesheet:"/css/home.css"})
%>
<body>
  <h1><i class="fa-solid fa-house-chimney"></i>&nbsp; Tasks</h1>
  <div class="tasks">
    <% for(const task of tasks) { %>
    <div class="task" id="<%= task.id %>">
      <div class="checkbox-container">
        <input type="checkbox" name="check" class="checkbox" />
        <label><%= task.task %></label>
      </div>
      <i class="far fa-star"></i>
    </div>
    <% } %>

    <a href="/home/add" id="add"
      ><i class="fas fa-plus"></i>&nbsp; <span class="add">Add a task</span></a
    >
  </div>

  <script src="/js/app.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
